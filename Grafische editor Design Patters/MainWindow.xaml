<Window x:Class="Grafische_editor_Design_Patters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grafische_editor_Design_Patters"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="720">
    <Grid>
        <DockPanel>
            <ToolBar Name="MyToolbar" DockPanel.Dock="Top" Height="50">
                <RadioButton Name="LineButton" Content="Line" Height="50" Width="80" BorderBrush="#FF969696" GroupName="ShapeGroup" Click="LineButton_Click" IsChecked="True"/>
                <RadioButton Name="EllipseButton" Content="Ellipse" Height="50" Width="80" BorderBrush="#FF969696" GroupName="ShapeGroup" Click="EllipseButton_Click"/>
                <RadioButton Name="RectangleButton" BorderBrush="#FF969696" Content="Rectangle" Height="50" Width="80" GroupName="ShapeGroup" Click="RectangleButton_Click"/>
                <RadioButton Name="SelectButton" BorderBrush="#FF969696" Content="Select" Height="50" Width="80" GroupName="ShapeGroup" Click="SelectButton_Click"/>
                <RadioButton Name="MoveButton" BorderBrush="#FF969696" Content="Move" Height="50" Width="80" GroupName="ShapeGroup" Click="MoveButton_Click" />
                <RadioButton Name="ResizeButton" BorderBrush="#FF969696" Content="Resize" Height="50" Width="80" GroupName="ShapeGroup" Click="ResizeButton_Click" />
            </ToolBar>

            <Canvas Name="MyCanvas" Background="AntiqueWhite" Width="708" MouseDown="MyCanvas_MouseDown" MouseUp="MyCanvas_MouseUp" MouseMove="MyCanvas_MouseMove" Margin="0,5,0,10">

                <Line X1="10" Y1="10" X2="50" Y2="50" Stroke="Black" StrokeThickness="4"/>

                <Ellipse Fill="Yellow" Height="50" Width="100" StrokeThickness="2" Stroke="Black" Canvas.Left="100" Canvas.Top="20"/>

                <Rectangle Fill="Blue" Height="50" Width="100" Canvas.Left="251" Canvas.Top="20"/>


            </Canvas>
        </DockPanel>
    </Grid>
</Window>
